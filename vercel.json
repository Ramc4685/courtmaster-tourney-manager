
{
  "buildCommand": "node --no-warnings build-fix.mjs && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "build": {
    "env": {
      "ROLLUP_SKIP_NODEJS_NATIVE_ADDONS": "true",
      "ROLLUP_NATIVE_BINDINGS": "false",
      "ROLLUP_FORCE_JAVASCRIPT": "true",
      "NODE_OPTIONS": "--no-warnings",
      "ESBUILD_FORCE_JS_BUILD": "true"
    }
  }
}
