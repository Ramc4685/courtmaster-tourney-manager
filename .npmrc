
# Allow optional dependencies to fail installation
optional=true

# Don't bail on missing optionals
strict-peer-dependencies=false

# Disable fund messages during install
fund=false

# Use newer lockfile format
lockfile-version=3

# Skip Node.js platform checks
engine-strict=false

# Explicitly prevent Rollup from trying to use native modules
rollup-skip-nodejs-binary-fetching=true

# Don't run install scripts which might try to download native binaries
# But allow esbuild and other critical dependencies
ignore-scripts=false
